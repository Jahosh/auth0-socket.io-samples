extends layout

block content
    script(src="http://cdn.auth0.com/js/lock/10.5/lock.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="https://code.jquery.com/jquery-3.1.1.js")


    div#login
        button.btn Login
    div#chat
        ul#messages
            form(id="loginForm" action="")
                input(id="m" autocomplete="off")
                button.btn Send

    script.
        var userProfile;
        var userToken;
        var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}');
        $('#chat').hide();
        $('#login button').click(function (e) {
            e.preventDefault();
            lock.show();
        });

        lock.on("authenticated", function(authResult) {
            lock.getProfile(authResult.idToken, function (err, profile) {
                if (err) {
                    console.log('Cannot get user', err);
                    return;
                }
                console.log('connected and authenticated');
                userProfile = profile;
                localStorage.setItem('userToken', authResult.idToken);
                userToken = authResult.idToken;
                openChat();
            });
        });

        function openChat() {
            var socket = io();
            socket
                .on('connect', function (msg) {
                    console.log("connected");
                    socket.emit('authenticate', {token: userToken}); // send the jwt
                })
                .on('authenticated', function () {
                    //Do
                    $('#login').hide();
                    $('#chat').show();
                    $('form').submit(function (event) {
                        socket.emit('chat message', $('#m').val());
                        $('#m').val('');
                        return false;
                    });
                })
                .on('unauthorized', function(msg){
                    console.log("unauthorized: " + JSON.stringify(msg.data));
                    throw new Error(msg.data.type);
                })
                .on('chat message', function (msg) {
                    console.log("msg");
                    $('#messages').append($('<li>').text(msg));
                });
        };
